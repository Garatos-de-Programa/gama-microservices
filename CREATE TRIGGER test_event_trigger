CREATE TRIGGER test_event_trigger
AFTER INSERT OR UPDATE OR DELETE
ON public."Users"
FOR EACH ROW
EXECUTE FUNCTION test_event_function();


CREATE OR REPLACE FUNCTION test_event_function() RETURNS trigger AS $$
DECLARE
    row RECORD;
    output TEXT;
BEGIN
	IF (TG_OP = 'DELETE') THEN
      row = OLD;
    ELSE
      row = NEW;
    END IF;
	
	output = 'id:' || row."Id";
	
  	PERFORM pg_notify('user_notification',output);
  
  RETURN NULL;
END;
$$ LANGUAGE plpgsql;

	update public."Users" SET "FirstName" = 'dedao'




